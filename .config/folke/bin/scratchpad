#!/bin/bash

#!/usr/bin/bash

if [ -z $1 ]; then
	echo "Usage: $0 <name of hidden scratchpad window>"
	exit 1
fi
    
pids=$(xdotool search --class ${1})
if [ -z "$pids" ]; then
  kitty --class dropdown -o background_opacity=.9&
else
  for pid in $pids; do
    echo "Toggle $pid"
    bspc node $pid --flag hidden -f
  done
fi
